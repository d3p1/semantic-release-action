{
  "name": "@d3p1/commitlint-config-conventional",
  "version": "3.0.0",
  "description": "An extension of the commitlint conventional config that validates the addition of an issue number",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/d3p1/commitlint-config-conventional.git"
  },
  "keywords": [
    "commitlint",
    "commitlint-config",
    "conventional-commits"
  ],
  "author": "Cristian Marcelo de Picciotto <d3p1@d3p1.dev> (https://d3p1.dev/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/d3p1/commitlint-config-conventional/issues"
  },
  "homepage": "https://github.com/d3p1/commitlint-config-conventional",
  "dependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "eslint": "^8.48.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "prettier": "3.0.3",
    "semantic-release": "^21.1.1",
    "write-good": "^1.0.8"
  },
  "files": [
    "./src/index.js",
    "./src/commitlint.parser.js"
  ],
  "main": "./src/index.js",
  "scripts": {
    "lint:spelling": "write-good --no-passive",
    "lint:code": "prettier ./src/ --write && eslint ./src/ --fix"
  }
}
